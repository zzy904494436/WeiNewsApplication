<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <RelativeLayout
        android:id="@+id/myselfLogin"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <com.qianfeng.util.CircleImageView
            android:id="@+id/userIcon"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/share_anim_bg"
            android:layout_width="77dp"
            android:layout_height="77dp"
            />
        <!--这个ImageView是中间空心的-->
        <!--<ImageView
            android:id="@+id/emptyIcon"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/feed_avatar_mask_press"
            android:layout_width="77dp"
            android:layout_height="77dp" />-->
        <ImageView
            android:id="@+id/ivBackIcon"
            android:layout_marginLeft="19dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvCilckToClient"
            android:layout_marginTop="16dp"
            android:layout_alignTop="@id/ivBackIcon"
            android:layout_toRightOf="@id/ivBackIcon"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:text="点击登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:text="趣你的头条"
            android:layout_toRightOf="@id/ivBackIcon"
            android:layout_below="@id/tvCilckToClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_to_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
