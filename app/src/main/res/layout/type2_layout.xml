<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:layout_height="110dp">
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/type2_title"
            android:text="_(:з」∠)_"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/type2_other1"
            android:layout_alignParentBottom="true"
            android:textSize="13sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/type2_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/type2_other1"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/icon_read_num"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/type2_other2"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_toRightOf="@id/type2_icon"
            android:layout_alignParentBottom="true"
            android:text="_(:з」∠)_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/type2_Pic"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="110dp"
        android:src="@mipmap/icon_fail"/>
</LinearLayout>
