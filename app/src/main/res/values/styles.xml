<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="tabText">
        <item name="android:textSize">0sp</item>
    </style>
    <style name="radioButtonStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/radiobutton_textcolor_select</item>

    </style>
    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">

        <item name="android:background">#00ffffff</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

</resources>
